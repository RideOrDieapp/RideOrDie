doctype html
html(lang="en")
    head
        meta(charset="utf-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1")
        meta(name="description" content="")
        meta(name="author" content="")
        link(rel="shortcut icon", href="/images/favicon.jpg", type="image/jpg")

        - var title = siteTitle || "Ride or Die"
        title #{title}

        //-- Bootstrap Core CSS --
        link(href="/stylesheets/bootstrap.css", rel="stylesheet")

        //-- MetisMenu CSS --
        link(href="/stylesheets/plugins/metisMenu/metisMenu.min.css", rel="stylesheet")

        //-- Custom CSS --
        link(href="/stylesheets/sb-admin-2.css", rel="stylesheet")

        //-- Other CSS --
        link(href="/stylesheets/Styles.css", rel="stylesheet")

        //-- Custom Fonts --
        link(href="/font-awesome-4.2.0/css/font-awesome.min.css", rel="stylesheet", type="text/css")

        //-- jQuery Version 1.11.0 --
        script(src="/scripts/jquery-1.11.1.min.js")

        //-- JQuery UI CSS --
        link(href="/scripts/jquery-ui-1.11.2.custom/jquery-ui.min.css", rel="stylesheet")
        link(href="/scripts/jquery-ui-1.11.2.custom/jquery-ui.structure.min.css", rel="stylesheet")
        link(href="/scripts/jquery-ui-1.11.2.custom/jquery-ui.theme.min.css", rel="stylesheet")

        //-- JQuery UI --
        script(src="/scripts/jquery-ui-1.11.2.custom/jquery-ui.js")

        //-- Moment version 2.8.3 --
        script(src="/scripts/moment.min.js")

        //Angular
        script(src="/scripts/angular.min.js")
        script(src="/scripts/angular-route.min.js")

        //-- Leaflet --
        link(href="/stylesheets/leaflet.css", rel="stylesheet")
        script(src="/scripts/leaflet.js")
        script(src="/scripts/angular-leaflet-directive.min.js")

        script(src="/angular/Routes.js")

        //Firebase
        script(src="https://cdn.firebase.com/js/client/2.1.2/firebase.js")
        //AngularFire script
        script(src="https://cdn.firebase.com/libs/angularfire/0.9.2/angularfire.min.js")

body(ng-app="RideOrDie")
        div#wrapper
            //-- Navigation --
            nav.navbar.navbar-default.navbar-static-top(role="navigation", style="margin-bottom: 0")
                div.navbar-header
                    a.navbar-brand.darkGrey(href="/")
                        span.fa-stack.darkGrey.logoText.tiny-right-space
                            img.hover(src="/images/RIDEORDIE.java.css.mp4.m4a.wav.c.cc.js.php.jpg.gif.png")
                        | #{title}
                //-- end .navbar-header --


        ng-view


            //-- end #page-wrapper --
        //-- end #wrapper --

        //-- Bootstrap Core JavaScript --
        script(src="/scripts/bootstrap.min.js")

        //-- Bootstrap Angular
        script(src="/scripts/ui-bootstrap-0.11.2.min.js")

        //-- UI Utils
        script(src="/scripts/ui-utils.js")

        //-- Metis Menu Plugin JavaScript --
        script(src="/scripts/plugins/metisMenu/metisMenu.min.js")

        //-- Custom Theme JavaScript --
        script(src="/scripts/sb-admin-2.js")
