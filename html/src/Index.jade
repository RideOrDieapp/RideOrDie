div#map_canvas
    ui-gmap-google-map(events='map.events' center='map.center' zoom='map.zoom')
        ui-gmap-marker(ng-if="marker" ng-repeat="singleMarker in dataSet track by $index" idKey='singleMarker.objectid' coords="singleMarker.location")
    div#map_options
        h4.center Data Options
        input#checkMarker(type="checkbox" ng-checked="marker" ng-model="marker")
        label(for="checkMarker") Show wreck markers
div#pleaseWaitDialog.modal.fade(data-backdrop="static" data-keyboard="false")
    div.modal-dialog
        div.modal-header
            h1#modalStatus Processing...
        div.modal-body
            div.progress
                div.progress-bar.progress-bar-striped.active(role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%")
div#route_info(Title="Bike Route Information")
    table.table
        tr.table-striped
            th Wrecks:
            th#wreck_count
    table.table(ng-repeat="wreck in clickedFeature.wrecks track by $index")
        tr.table-striped
            th Wreck:
            th {{$index+1}}
        tr.table-striped
            td Wreck Time:
            td#speed_limit {{wreck.crash_time}}
        tr.table-striped
            td Speed Limit:
            td#speed_limit {{wreck.speed_limi}}
        tr.table-striped
            td Est. Speed:
            td#speed_limit {{wreck.drvr_estsp}}
        tr.table-striped
            td Alc. Involved:
            td#speed_limit {{wreck.crashalcoh}}